{% extends 'base.html.twig' %}

{% block title %}Tables{% endblock %}

{% block body %}
    <div class="album py-5 bg-light">
        <div class="container">

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                {% for table in tables %}
                    <div class="col">
                        <div class="card shadow-sm">
                            <img class="bd-placeholder-img card-img-top" width="100%" height="225" src="{{ asset("uploads/homepage/restaurant.jpg") }}" alt="Restaurant">

                            <div class="card-body">
                                <p class="card-text">This is a wider card with supporting text below as a natural
                                    lead-in to additional content. This content is a little bit longer.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Detalii</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary">Rezerva</button>
                                    </div>
                                    <small class="text-muted">Disponibil</small>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
